extends layout

block content
    .fluid-container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign up cowboy
                
                form(method='POST' action='/register')
                    div.form-group
                        label(for='username') Username:
                        input#name.form-control(type='text', name='username')
                    div.form-group
                        label(for='password') Password:
                        input#name.form-control(type='password', name='password')
                    div.form-group
                        label(for='password2') Password:
                        input#name.form-control(type='password', name='password2')
                    div.form-group
                        label(for='password') Email:
                        input#name.form-control(type='email', name='email')
                    button.btn.btn-primary(type='submit') Sign up